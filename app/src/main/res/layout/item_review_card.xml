<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/reviewerImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@drawable/dot_circle" />

        <TextView
            android:id="@+id/reviewerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/reviewerImage"
            android:fontFamily="@font/poppins_semibold"
            tools:text="Name"
            android:textColor="#1B3650"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/reviewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:alpha="0.45"
            android:fontFamily="@font/poppins_regular"
            tools:text="Date"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/reviewComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reviewerName"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/reviewerImage"
            android:fontFamily="@font/poppins_regular"
            tools:text="Review Comment"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
