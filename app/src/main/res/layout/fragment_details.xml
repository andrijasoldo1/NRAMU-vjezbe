<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/selectPictureBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Picture" />

            <EditText
                android:id="@+id/firstNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite Vaše ime"
                android:inputType="text" />

            <EditText
                android:id="@+id/lastNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite Vaše prezime"
                android:inputType="text" />

            <EditText
                android:id="@+id/eMailTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite Vaš email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/dateOfBirthTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite datum rođenja"
                android:inputType="text" />

            <EditText
                android:id="@+id/telephoneTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite Vaš kontakt telefon"
                android:inputType="phone" />

            <EditText
                android:id="@+id/genderTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite Vaš spol"
                android:inputType="text" />

            <EditText
                android:id="@+id/addressTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite Vašu adresu"
                android:inputType="text" />

            <EditText
                android:id="@+id/placeOfBirthTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite mjesto rođenja"
                android:inputType="text" />

            <EditText
                android:id="@+id/universityTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite fakultet"
                android:inputType="text" />

            <EditText
                android:id="@+id/yearStartTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Godina početka fakulteta"
                android:inputType="number" />

            <EditText
                android:id="@+id/yearFinishTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Godina završetka fakulteta"
                android:inputType="number" />

            <EditText
                android:id="@+id/expertiseTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Područje stručnosti"
                android:inputType="text" />

            <EditText
                android:id="@+id/roleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Uloga"
                android:inputType="text" />

            <EditText
                android:id="@+id/cvTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unesite link na CV"
                android:inputType="textUri" />

            <Button
                android:id="@+id/saveProfileBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spasi podatke" />

            <Button
                android:id="@+id/requestLawyerStatusButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Lawyer Status"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
