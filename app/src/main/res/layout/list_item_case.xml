<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Case Name -->
    <TextView
        android:id="@+id/case_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Case Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <!-- Case Status -->
    <TextView
        android:id="@+id/case_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="16sp"
        android:paddingBottom="4dp" />

    <!-- Type of Case -->
    <TextView
        android:id="@+id/case_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type of Case"
        android:textSize="14sp"
        android:paddingBottom="4dp" />

    <!-- Case Price -->
    <TextView
        android:id="@+id/case_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: Not set"
        android:textSize="14sp"
        android:paddingBottom="4dp" />

    <!-- Case Description -->
    <TextView
        android:id="@+id/case_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No description available"
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <!-- User Email -->
    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created by: Unknown"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingBottom="8dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Case"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</LinearLayout>
