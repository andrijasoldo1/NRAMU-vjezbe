<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Lawyer Details -->
    <TextView
        android:id="@+id/lawyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lawyer Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/lawyer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/lawyer_expertise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expertise"
        android:layout_marginBottom="8dp" />

    <!-- Case Count -->
    <TextView
        android:id="@+id/case_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prihvaćeni: 0 | Riješeni: 0"
        android:textColor="#555"
        android:layout_marginBottom="8dp" />

    <!-- Lawyer Picture -->
    <ImageView
        android:id="@+id/lawyer_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <!-- Reviews -->
    <TextView
        android:id="@+id/lawyer_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reviews will appear here"
        android:layout_marginBottom="8dp" />

    <!-- Rating Bar -->
    <RatingBar
        android:id="@+id/lawyer_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginBottom="8dp" />

    <!-- Review Input -->
    <EditText
        android:id="@+id/review_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a review"
        android:layout_marginBottom="8dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Review" />

</LinearLayout>
